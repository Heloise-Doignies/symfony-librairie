{% extends 'base.html.twig' %}

{% block title %}Nos livres{% endblock %}

{% block body %}
<h1>Nos livres</h1>
{# On affiche tous les livres avec une boucle #}
<main class="container">
<div class="row">
<div class="d-flex col-12 justify-content-between">
{% for livre in livres %}
<div class="card" style="width: 18rem;">
  <img src="/images/livres/{{livre.imageName}}" class="card-img-top" alt="{{livre.titre}}">
  <div class="card-body">
    <h5 class="card-title">{{livre.titre}}</h5>
    <p class="card-text">{{livre.description}}</p>
    <a href="#" class="btn btn-primary">Ajout</a>
  </div>
</div>
{% endfor %}
</div>
</div>
</main>

{% endblock %}
