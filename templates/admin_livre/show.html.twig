{% extends 'base-backend.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}

    <a href="{{ path('app_admin_livre_index') }}" class="btn btn-dark mb-3"><i class="align-middle" data-feather="corner-down-left"></i> Retour</a>

<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Livre</h1>
    {{ include('admin_livre/_delete_form.html.twig') }}
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ livre.imageName }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ livre.slug }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i> Modifier</a>

{% endblock %}
