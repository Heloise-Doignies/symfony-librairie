{% extends 'base-backend.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}

    <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-dark mb-3"><i class="align-middle" data-feather="corner-down-left"></i> Retour</a>
    
<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Catégorie</h1>
    {{ include('admin_categorie/_delete_form.html.twig') }}
</div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i> Modifier</a>

{% endblock %}
